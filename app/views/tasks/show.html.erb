<h1><%= @task.name %></h1>
<p><%= @task.details %></p>

<p><%= link_to "Edit Task", edit_task_path %></p>
<p><%= link_to "Create Task", new_task_path %></p>
<p><%= link_to "Delete Task", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<p><%= link_to 'Back to tasks', tasks_path %></p>

